<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/bar_bg" />

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.loopj.android.image.SmartImageView
            android:id="@+id/top_image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" 
            android:src="@drawable/unknown" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/top_image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/top_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/top_image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/top_image5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/unknown" />
    </ViewFlipper>

    <TextView
        android:id="@+id/rssEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="@string/rssEmpty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical" >
        </ProgressBar>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@drawable/bar_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/titrePlanning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="left"
            android:padding="5dp"
            android:shadowColor="#cecece"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="0.3"
            android:text="VOTRE PLANNING HEBDOMADAIRE"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ExpandableListView
            android:id="@+id/planning"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="@android:color/transparent"
            android:gravity="center_horizontal"
            android:groupIndicator="@null" />

        <TextView
            android:id="@+id/planningEmpty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center_vertical|center_horizontal"
            android:shadowColor="@color/ics_blue"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="0.5"
            android:text="@string/planningEmpty"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>